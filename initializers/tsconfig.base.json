{
	"compilerOptions": {
		"allowSyntheticDefaultImports": false,
		"esModuleInterop": false,
		"alwaysStrict": true,
		
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",

		"lib": ["es2015", "es2017", "dom"],
		"outDir": "dist",
		"watch": false,
		"sourceMap": true,
		"jsx": "react",
		"importHelpers": true,

		"allowJs": true,

		"paths": {
			"@root"			: ["./index"],
			"@root/*"		: ["./*"],
			"@source"		: ["source/index"],
			"@source/*"		: ["source/*"]
		}
	}
}